{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "api"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": "5050"
    }
  },
  "functions": {
    "source": "functions"
  }
}
